<UserControl x:Class="homework_new.ToDoITem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:homework_new"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="250">
    <Grid>
        <Grid>
            <Grid Background="White" Height="30" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50"></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition Width="60"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <TextBox Foreground="Gray" Grid.Column="0" FontSize="13" VerticalAlignment="Center" BorderThickness="0" x:Name="time">Date</TextBox>
                <TextBox Foreground="Black" FontSize="13" Grid.Column="1" VerticalContentAlignment="Center" BorderThickness="0" x:Name="ITEMnameTb">NEW TASK</TextBox>
                <TextBox  Foreground="DeepSkyBlue" FontSize="13" Grid.Column="2" VerticalAlignment="Center" BorderThickness="0" x:Name="TEXXT">Price</TextBox>
            </Grid>
        </Grid>

    </Grid>
</UserControl>
